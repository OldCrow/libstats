{
  "branches": ["main"],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          {"type": "feat", "release": "minor"},
          {"type": "fix", "release": "patch"},
          {"type": "perf", "release": "patch"},
          {"type": "docs", "scope": "README", "release": "patch"},
          {"type": "chore", "scope": "deps", "release": "patch"},
          {"revert": true, "release": "patch"}
        ],
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES", "BREAKING"]
        }
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            {"type": "feat", "section": "âœ¨ Features"},
            {"type": "fix", "section": "ğŸ› Bug Fixes"},
            {"type": "perf", "section": "âš¡ Performance"},
            {"type": "docs", "section": "ğŸ“š Documentation"},
            {"type": "style", "section": "ğŸ’„ Style"},
            {"type": "refactor", "section": "â™»ï¸ Refactoring"},
            {"type": "test", "section": "âœ… Tests"},
            {"type": "build", "section": "ğŸ—ï¸ Build System"},
            {"type": "ci", "section": "ğŸ‘· CI/CD"},
            {"type": "chore", "section": "ğŸ”§ Maintenance"},
            {"type": "revert", "section": "âª Reverts"}
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "CMakeLists.txt", "include/libstats.h"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "successComment": false,
        "failComment": false
      }
    ]
  ]
}
